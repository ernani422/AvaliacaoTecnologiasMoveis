<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@android:drawable/spinner_background">

    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="730dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/resultadoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="#FF0000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultadoValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="resultadoValor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultadoKmL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="resultadoKmL"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultadoValorEtanol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="resultadoValorEtanol"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultadoKmLEtanol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="resultadoKmLEtanol"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultadoEconomia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="resultadoEconomia"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ResultadoConsumo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="ResultadoConsumo"
            android:textSize="24sp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="173dp"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:background="#009688"
            android:text="Retorno" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>