<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="371dp"
        android:layout_height="397dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:foregroundGravity="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="@string/informe_um_n_mero"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/numTentativa"
            app:layout_constraintStart_toStartOf="@+id/textViewDica"
            app:layout_constraintTop_toTopOf="@+id/numTentativa" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="358dp"
            android:layout_height="44dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/advinhe_o_n_mero"
            android:textColor="#F1F1F1"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="378dp"
            android:layout_height="61dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:text="@string/tenho_um_n_mero_entre_1_e_100_voc_pode_advinh_lo"
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="384dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textColor="#1C1B1B"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/numTentativa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView2" />

        <EditText
            android:id="@+id/numTentativa"
            android:layout_width="212dp"
            android:layout_height="83dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_style"
            android:ems="10"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="clip_vertical"
            android:inputType="number"
            android:textColor="#232323"
            android:textSize="80sp"
            app:layout_constraintBottom_toTopOf="@+id/textViewDica"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textViewDica"
            android:layout_width="372dp"
            android:layout_height="59dp"
            android:enabled="false"
            android:gravity="center"
            android:textColor="#048700"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonJogar"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonJogar"
            android:layout_width="360dp"
            android:layout_height="82dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_style"
            android:onClick="onClick"
            android:text="@string/jogar"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textViewDica"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="@+id/textViewDica"
            tools:ignore="InefficientWeight,UsingOnClickInXml" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>